<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:visibility="visible">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/paper_color"
        android:elevation="6dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/search_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="-2dp"
            android:theme="@style/ToolbarTheme"
            android:transitionName="@string/transition_search_bar"
            app:navigationIcon="@drawable/ic_arrow_back_24px"
            tools:ignore="RtlSymmetry">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

            <SearchView
                android:id="@+id/search_cab_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-16dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:focusable="true"
                android:imeOptions="actionGo|flagNoExtractUi"
                android:inputType="text"
                app:defaultQueryHint="@string/search_hint" />
            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_search_results"
            android:name="com.example.searchviewbottomnav.ui.search.SearchResultsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_search_results" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/search_panel_recent"
            android:name="com.example.searchviewbottomnav.ui.search.RecentSearchesFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_search_recent" />

    </FrameLayout>
</LinearLayout>
